             x:Class="TourAssistant.Client.Core.Pages.AreaInfoMenuView"
             Title="Tour Assistant - Ваш тур - Информация">
    <StackLayout>

        <Button Text="Страна" 
                Command="{Binding ShowCounrtyInfoPage}" 
                BorderWidth ="1"
                FontSize="Large"/>
        <Button Text="Курорт" 
                Command="{Binding ShowKurortInfoPage}" 
                BorderWidth ="1"
                FontSize="Large"/>
        <Button Text="Отель" 
                Command="{Binding ShowHotelInfoPage}" 
                BorderWidth ="1"
                FontSize="Large"/>
    </StackLayout>
    
</ContentPage>