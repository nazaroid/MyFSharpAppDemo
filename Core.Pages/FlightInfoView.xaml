<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TourAssistant.Client.Core.Pages.FlightInfoView" 
             Title="Tour Assistant - Перелеты">
    
    <StackLayout>
        <TableView>
            <TableRoot >
                <TableSection Title="ТУДА:" BindingContext="{Binding There}">
                    <TextCell Text="Рейс:" Detail="{Binding Code}"></TextCell>
                    <TextCell Text="Время (вылет):" Detail="{Binding DepartureTime}"></TextCell>
                    <TextCell Text="Аэропорт (вылет):" Detail="{Binding DepartureAeroport}"></TextCell>
                    <TextCell Text="Аэропорт (прибытие):" Detail="{Binding ArrivalAeroport}"></TextCell>
                </TableSection>
                <TableSection Title="ОБРАТНО:" BindingContext="{Binding Back}">
                    <TextCell Text="Рейс:" Detail="{Binding Code}"></TextCell>
                    <TextCell Text="Время (вылет):" Detail="{Binding DepartureTime}"></TextCell>
                    <TextCell Text="Аэропорт (вылет):" Detail="{Binding DepartureAeroport}"></TextCell>
                    <TextCell Text="Аэропорт (прибытие):" Detail="{Binding ArrivalAeroport}"></TextCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>

</ContentPage>